@model IEnumerable<DisplayGenerationWithImageModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionYearBegin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionYearEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarsCount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyType)
                </td>
                <td>
                    <img src="@item.ImageUrl" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionYearBegin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionYearEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarsCount)
                </td>
            </tr>
        }
    </tbody>
</table>

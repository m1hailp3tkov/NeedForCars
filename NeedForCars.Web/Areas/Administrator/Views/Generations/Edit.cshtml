@model EditGenerationModel

<h4>Edit @ViewBag.Make @ViewBag.Model @ViewBag.Generation</h4>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormImages" class="control-label"></label><br />
                <input asp-for="FormImages" class="form-control" accept=".jpg,.png" multiple />
                <text class="text-warning" style="font-size:small">* Uploading new photos will delete existing ones. Add All Photos at once.</text>
                <span asp-validation-for="FormImages" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="BodyType" class="control-label"></label>
            <select asp-for="BodyType" asp-items="Html.GetEnumSelectList<BodyType>()" class="form-control">
                <option selected="selected" value="">--</option>
            </select>
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label asp-for="Seats" class="control-label"></label>
            <input asp-for="Seats" class="form-control" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-8">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="10"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-2">
            <input type="submit" value="Edit" class="btn btn-dark" />
        </div>
    </div>
</form>
@model NeedForCars.Web.Areas.Administrator.ViewModels.Makes.DeleteMakeModel

<h4 class="text-danger">Confirm Delete</h4>
<div>
    <hr />
    <h5>Are you sure you want to delete the make @Model.Name ?</h5>
    <h6>Doing so will also delete:</h6>

    <table class="table-borderless col-sm-6">
        <tr>
            <td><span class="badge badge-danger badge-pill">@Model.UserCarsCount</span></td>
            <td class="col-sm-4"><b>Users' cars</b></td>
        </tr>
        <tr>
            <td><span class="badge badge-danger badge-pill">@Model.CarsCount</span></td>
            <td class="col-sm-4"><b>Cars from the Database</b></td>
        </tr>
        <tr>
            <td><span class="badge badge-danger badge-pill">@Model.GenerationsCount</span></td>
            <td class="col-sm-4"><b>Generations from the Database</b></td>
        </tr>
        <tr>
            <td><span class="badge badge-danger badge-pill">@Model.ModelsCount</span></td>
            <td class="col-sm-4"><b>Models from the Database</b></td>
        </tr>
    </table>

    <hr />
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger col-sm-2" />
    </form>
